<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutRoot"
    tools:showIn="@layout/activity_docs"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <ru.adonixis.vkcupdocs.util.RoundedCornersImageView
        android:id="@+id/icDoc"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        tools:src="@drawable/ic_placeholder_document_archive_72"
        />

    <TextView
        android:id="@+id/tvFileTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/icDoc"
        app:layout_constraintBottom_toTopOf="@+id/tvFileInfo"
        app:layout_constraintStart_toEndOf="@+id/icDoc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="42dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:text="Booking.com"
        />

    <TextView
        android:id="@+id/tvFileInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvFileTitle"
        app:layout_constraintBottom_toTopOf="@+id/tvFileTag"
        app:layout_constraintStart_toEndOf="@+id/icDoc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="42dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:lines="1"
        android:textColor="@color/gray_text"
        android:textSize="13sp"
        tools:text="7 янв · 199 КБ"
        />

    <ImageView
        android:id="@+id/icTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tvFileTag"
        app:layout_constraintBottom_toBottomOf="@+id/tvFileTag"
        app:layout_constraintStart_toEndOf="@+id/icDoc"
        android:layout_marginStart="12dp"
        android:src="@drawable/ic_tag_12"
        android:tint="@color/gray_icon"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/tvFileTag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvFileInfo"
        app:layout_constraintBottom_toBottomOf="@+id/icDoc"
        app:layout_constraintStart_toEndOf="@+id/icTag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="42dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:lines="1"
        android:textColor="@color/gray_text"
        android:textSize="13sp"
        tools:text="Поездка в Японию"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <ImageView
        android:id="@+id/icMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/icDoc"
        app:layout_constraintBottom_toBottomOf="@+id/icDoc"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:src="@drawable/ic_more_vertical_16"
        android:tint="@color/gray_more"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        />

</androidx.constraintlayout.widget.ConstraintLayout>