<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/gray_light</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Login" parent="AppTheme">
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="android:statusBarColor">@color/blue_dark</item>
    </style>

    <style name="AppTheme.Button.VKLogin" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button_vk_login</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Light.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
